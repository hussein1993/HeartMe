<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubmitBloodTestResults">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/am_i_ok"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_margin="30dp"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:id="@+id/welcomeText"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="10dp"
            android:id="@+id/test_name_text_id"
            android:paddingEnd="10dp"
            android:background="@drawable/frame_border"
            android:hint="@string/test_name"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
           android:layout_marginStart="40dp"
            android:id="@+id/res_text_id"
            android:layout_marginEnd="40dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/frame_border"
            android:layout_marginTop="20dp"
            android:hint="@string/result"/>
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/submit"
                android:id="@+id/submit_btn" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/res_layout"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:text="@string/test_name"
            android:layout_margin="10dp"
            android:id="@+id/result_text"/>
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_res"
            android:src="@drawable/ic_sad_smiley___white"
            android:layout_height="150dp"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:id="@+id/res_diagnosis"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>